<div class="container">
	<h1 class="page-header">My Videos</h1>
	{{#each model as |video|}}
		{{#link-to 'watch' video}}
			<div class= "row pad" >
				<div class = "col-lg-12">
					<div class = "col-md-4">
						<img class = "img-responsive" src={{video.youtube.thumbnails.medium.url}}>
					</div>
					<div class = "col-md-6">
						<div class="row pad-top">
							{{video.youtube.title}}
						</div>
						<div class="row not-link">
							by: {{video.youtube.channelTitle}}
						</div>
					</div>
				</div>
			</div>
		{{/link-to}}
	{{/each}}
</div>