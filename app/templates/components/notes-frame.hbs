<div class="form-group">
	{{input value=keyword placeholder="Write keyword here..." enter="addNote" class="form-control" id="focusedInput"}}
</div>
	{{#each model.notes as |note|}}
		<div class="panel panel-default">
			<div class="panel-heading" >
				<span class="time" {{action 'seekTo' note.timestamp}}>{{note.time}}</span>
				<span> -  
					<button class="btn btn-default btn-sm" {{action 'collapseDrop' note}}>
						{{note.keyword}}
				 		{{#if note.collapsed}}
				 			<span class="glyphicon glyphicon-menu-up"></span>
				 		{{else}}
				 			<span class="glyphicon glyphicon-menu-down"></span>
				 		{{/if}}
				 	</button>
				</span>
				<button class="remove btn btn-link btn-xs" {{action 'removeNote' note}}><span class="glyphicon glyphicon-remove"></span></button>
			</div>
			{{#if note.collapsed}}	
				<div class="panel-body">
   			 		{{note.description}}
 				</div>
 			{{/if}}
		</div>
		
	{{/each}}



