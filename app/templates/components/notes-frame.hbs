
<div>
	{{input value=keyword placeholder="Write keyword here..." enter="addNote"}}
		<br>
	
		{{#each model.notes as |note|}}
		<div class="panel panel-default">

			<div class="panel-heading" >
				 <span class="time" {{action 'seekTo' note.timestamp}}>{{note.time}}</span> - <span style="cursor:pointer" {{action 'collapseDrop' note}}>{{note.keyword}}</span> <button {{action 'removeNote' note}}>Remove</button>
			</div>
			{{#if note.collapsed}}	
				<div class="panel-body">
   			 		{{note.description}}
 				</div>
 			{{/if}}
		</div>
		<br>
		{{/each}}
	
</div>



